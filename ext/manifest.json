{
    "manifest_version": 3,
    "name": "parser job posts Linkedin",
    "description": "Расширение для парсинга job post'ов из Linkedin",
    "version": "1.1",
    "icons": {
	    "128": "images/jobs.png"
    },
    
    "background":{
	    "service_worker":"js/background.js"
    },

    "content_scripts":[
	    {
		    "js":[
			    "js/content.js"
		    ],
		    "matches":[
			    "<all_urls>"
		    ]
	    }
    ],

    "web_accessible_resources":[{
	    "resources":["html/parser.html"],
	    "matches":["<all_urls>"]
    }],

    "permissions": [
	    "unlimitedStorage",
	    "activeTab",
	    "scripting",
	    "tabs"
    ],
    "host_permissions":[
	    "<all_urls>",
	    "http://127.0.0.1:7721/*",
	    "http://localhost:7721/*"
    ],

    "action": {
	    "default_popup":"html/popup.html"
    }
}
